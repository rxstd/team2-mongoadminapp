<!--우측 콘텐츠 헤더영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>사용자정보수정</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/">Home></a>
      </li>
      <li>
        <a>관리자정보관리></a>
      </li>
      <li class="active">
        <strong>수정</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<!--우측 콘텐츠 영역 -->

<div class="wrapper wrapper-content">
  <form action="/member/modify/<%= member._id %>" method="post">
    <div class="ibox-content m-b-sm border-bottom">
      <!-- 첫번째 정보 열 -->
      <!--
email : 이메일
member_password : 비밀번호
name : 이름
telephone : 전화번호
entry_type_code : 가입유형
use_state_code : 사용상태
birth_date : 생년월일
reg_date : 등록일시
reg_member_id : 등록자
edit_date : 수정일시
edit_member_id : 수정자
위 목록이 들어가야 함

-->
      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <label class="control-label">메일주소</label>
            <input
              type="text"
              name="email"
              class="form-control"
              value="<%= member.email %>"
            />
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">비밀번호</label>
            <input
              type="password"
              name="member_password"
              class="form-control"
              placeholder="변경시에만 입력하세요."
            />
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">이름</label>
            <input type="text" name="name" class="form-control" value="<%= member.name %>" />
          </div>
        </div>

        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">전화번호</label>
            <input type="text" name="telephone" class="form-control" value="<%= member.telephone %>" />
          </div>
        </div>

        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">생년월일</label>
            <input type="text" name="birth_date" class="form-control" value="<%= member.birth_date %>" />
          </div>
        </div>

        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">가입유형</label>
            <select name="entry_type_code" class="form-control">
              <option value="1" <% if (member.entry_type_code == '1') { %> selected <% } %>>일반</option>
              <option value="2" <% if (member.entry_type_code == '2') { %> selected <% } %>>페이스북</option>
              <option value="3" <% if (member.entry_type_code == '3') { %> selected <% } %>>카카오</option>
              <option value="4" <% if (member.entry_type_code == '4') { %> selected <% } %>>네이버</option>
            </select>
          </div>
        </div>

        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label">사용상태</label>
            <select name="use_state_code" class="form-control">
              <option value="1" <% if (member.use_state_code == '1') { %> selected <% } %>>사용</option>
              <option value="2" <% if (member.use_state_code == '2') { %> selected <% } %>>미사용</option>
            </select>
          </div>
        </div>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary">저장</button>
        <a href="/member/delete/<%= member._id %>" class="btn btn-danger">삭제</a>
        <a href="/member/list" class="btn btn-info">목록</a>
      </div>
    </div>
  </form>
</div>

<script></script>
