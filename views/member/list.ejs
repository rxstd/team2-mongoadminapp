<!--우측 상단 헤더 영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>사용자정보관리</h2>
    <ol class="breadcrumb">
      <li>
        <a href="/">Home></a>
      </li>
      <li>
        <a>사용자정보관리></a>
      </li>
      <li class="active">
        <strong>조회</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
  <!-- 사용자 정보조회 옵션 및 조회 영역 -->
  <form action="/member/list" method="post">
    <div class="ibox-content m-b-sm border-bottom">
      <div class="row">
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label" for="OrderNo">메일주소</label>
            <input type="text" name="email" class="form-control" />
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label" for="OrderName">이름</label>
            <input type="text" name="name" class="form-control" />
          </div>
        </div>
        <div class="col-sm-4">
          <div class="form-group">
            <label class="control-label" for="MobileNo">전화번호</label>
            <input type="text" name="telephone" class="form-control" />
          </div>
        </div>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">조회</button>
        <a href="/member/create" class="btn btn-info">신규</a>
      </div>
    </div>
  </form>

  <!-- 사용자 정보조회 결과 목록 표시 영역 -->
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th width="10%">#</th>
                  <th width="10%">계정명</th>
                  <th width="20%">이름</th>
                  <th width="20%">전화번호</th>
                  <th width="10%">생년월일</th>
                  <th width="10%">계정상태</th>
                  <th width="20%">가입일자</th>
                </tr>
              </thead>
              <tbody class="hoverTblBody">
                <% for (var i = 0; i < memberList.length; i++) { %>
                <tr>
                  <td>
                    <a href="/member/modify/<%= memberList[i].id %>"
                      ><%= memberList[i].member_id %></a
                    >
                  </td>
                  <td>
                    <a href="/member/modify/<%= memberList[i].id %>"
                      ><%= memberList[i].email %></a
                    >
                  </td>
                  <td><%= memberList[i].name %></td>
                  <td><%= memberList[i].telephone %></td>
                  <td><%= memberList[i].birth_date %></td>
                  <td>
                    <% if (memberList[i].use_state_code == '1') { %>
                    <span class="label label-primary">사용</span>
                    <% } else { %>
                    <span class="label label-danger">미사용</span>
                    <% } %>
                  </td>
                  <td><%= memberList[i].reg_date.toLocaleString() %></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

